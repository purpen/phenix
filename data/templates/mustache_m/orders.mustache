{{#rows}}
		<div class="item" id="order-{{ rid }}">
			
			<div class="ordertop">
				<span class="ui line fz-12">{{ created_at }}</span>
				<span class="ui color-be link fz-12 flt-r order_label_txt">{{ status_label }}</span>
			</div>
			
			{{#products}}
			<div class="content">
				<a href="{{wap_view_url}}" class="img"> 
						<img src="{{ cover_url }}">
				</a>
				<div class="orderinfo">
					<a class="ui link" href="{{ wap_view_url }}">
						<h4 class="title">
							{{ short_title }}
						</h4>
					
						<p class="price"><i class="rmb icon"></i>  {{ sale_price }}</p>
					</a>
					<div class="orderdes">
						<span class="sku">
							{{ sku_mode }}
						</span>
						<span class="count flt-r">
							x {{ quantity }}
						</span>
					</div>
				</div>
			</div>
			{{/products}}
			
			<div class="product">
				<p>共{{ items_count }}件商品&nbsp;&nbsp;总计：<i class="rmb icon"></i> {{ pay_money }}</p>
			</div>
			
			<div class="orderbottom status_btn_box">

          {{#status_invalid}}
            <a href="javascript:void(0);" rid="{{ rid }}" class="ui small color-be inverted button remove_order_btn">删除订单</a>
          {{/status_invalid}}

          {{#status_evaluate}}
          <!--<a href="/my/evaluate?rid={{ rid }}" rid="{{ rid }}" class="ui small color-be inverted button">评价订单</a>-->
          {{/status_evaluate}}

          {{#status_finish}}
            <a href="javascript:void(0);" rid="{{ rid }}" class="ui small color-be inverted button remove_order_btn">删除订单</a>
          {{/status_finish}}

		  {{#status_pay}}
            <a href="javascript:void(0);" rid="{{ rid }}" class="ui small color-be inverted button cancel_order_btn">取消订单</a>
			<a href="{{ app_url_wap }}/my/order_view?rid={{ rid }}" class="ui small color-be inverted button">立即支付</a>
		  {{/status_pay}}

		  {{#status_refunt}}
		    <a href="javascript:void(0);" class="ui small color-be inverted button apply-refund" name="apply-refund" rid="{{ rid }}">申请退款</a>
		  {{/status_refunt}}

		  {{#status_ready_goods}}
		    <a href="javascript:void(0);" class="ui small color-be inverted button take_delivery_btn" rid="{{ rid }}">确认收货</a>
		  {{/status_ready_goods}}
				
			</div>
		</div>

{{/rows}}
