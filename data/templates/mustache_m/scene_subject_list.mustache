{{#rows}}
		<div class="row pt-0 pb-2r">
			<a class="banner" href="{{ wap_view_url }}">
				<div class="hdtitle"><p>新品特惠，限时7天</p></div>
				<div class="zcover"></div>
				<img class="lazy" data-original="{{ cover_url }}" src="http://frstatic.qiniudn.com/images/icon/load750-422.png">
				<div class="content">
					<h3 class="ui header">{{ title }}</h3>
					<p>{{ short_title }}</p>
				</div>
			</a>

			<div class="overhidden">
				<ul class="shopitem">

                    {{#products}}
					<li>
						<a href="{{ wap_view_url }}">
							<img src="{{ cover_url }}">
							<div class="desc">
								<h2>{{ title }}</h2>
								<div class="cats">
		                            <span class="unit">￥</span>{{ sale_price }}
		                        </div>
							</div>
						</a>
					</li>
                    {{/products}}
					
				</ul>
			</div>
		</div>
{{/rows}}
