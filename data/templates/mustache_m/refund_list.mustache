{{#rows}}
	<div class="item" id="item-{{ _id }}">	
		<div class="ordertop">
			<span class="ui line fz-12">{{ created_at }}</span>
			<span class="ui color-be link fz-12 flt-r order_label_txt">{{ type_label }}</span>
		</div>
		<div class="content">
			<a href="{{ product.view_url }}" class="img"> 
					<img src="{{ product.cover_url }}">
			</a>
			<div class="orderinfo">
				<a class="ui link" href="{{ product.view_url }}">
					<h4 class="title">
						{{ product.short_title }}
					</h4>
				
					<p class="price"><i class="rmb icon"></i>  {{ refund_price }}</p>
				</a>
				<div class="orderdes">
					<span class="sku">
						{{ product.sku_name }}
					</span>
					<span class="count flt-r">
						x {{ quantity }}
					</span>
				</div>
			</div>
		</div>
		
        <!--
		<div class="product">
			<p>共1件商品&nbsp;&nbsp;总计：<i class="rmb icon"></i> 10000</p>
		</div>
        -->
		
		<div class="orderbottom status_btn_box">
			<a href="javascript:void(0);" data-id="{{ _id }}" class="ui small color-bd inverted button remove_refund_btn">删除</a>
		</div>
	</div>
{{/rows}}
