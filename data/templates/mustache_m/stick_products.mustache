{{#rows}}
<div class="recom-cell" id="product-{{ d._id }}">
	<a title="{{ d.title }}" alt="{{ d.title }}" href="{{ d.wap_view_url }}">
		<img class="lazy" data-original="{{ d.cover.thumbnails.apc.view_url }}" src="http://frstatic.qiniudn.com/images/icon/load380-380.png">
		<div class="shopbiao">
			{{ #d.new_tips }}
			<img src="http://frstatic.qiniudn.com/images/icon/xinpin.png" width="100%">
			{{ /d.new_tips }}
			{{ #d.hot_tips }}
			<img src="http://frstatic.qiniudn.com/images/icon/remai.png" width="100%">
			{{ /d.hot_tips }}
		</div>
		<div class="desc">
			<h2>{{ &d.short_title }}</h2>
			<div class="cats">
	            <span class="unit">ï¿¥</span>{{ d.sale_price }}
	        </div>

		</div>
	</a>
</div>
{{/rows}}
