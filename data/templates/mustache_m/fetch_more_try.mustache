{{#results.rows}}
    					<div class="card">
                            <div class="problock">
                                <a title="{{ title }}" alt="{{ title }}" href="{{ wap_view_url }}" style="background-image: url({{ cover.thumbnails.resp.view_url }});" class="thumb"></a>
                                <div class="ribbons">
                                    {{#season}}
                                    <span class="ribbon season">
                                        {{ kind_label }}
                                    </span>
                                    {{/season}}
        							{{#step_ready}}
        							<span class="ribbon callback">
        								预热中
                                    </span>
        							{{/step_ready}}
        							{{#step_ing}}
        							<span class="ribbon apply">
        								申请中
                                    </span>
        							{{/step_ing}}
        							{{#step_verify}}
        							<span class="ribbon recoe">
        								名单审核中
                                    </span>
                                    {{/step_verify}}
        							{{#step_recover}}
        							<span class="ribbon callback">
        								报告回收中
                                    </span>
                                    {{/step_recover}}
        							{{#step_over}}
        							<span class="ribbon end">
        								已结束
                                    </span>
        							{{/step_over}}
                                </div>
                                <h2>
                                    <a href="{{ wap_view_url }}" title="{{ title }}" class="ui line">
                        			    {{ &title }}
                        		    </a>
                                </h2>
                                <div class="excerpt">
                                  {{#step_ready}}
                                    <p>想要人数：<span class="count">{{ want_count }}</span>
                                  {{/step_ready}}
                                  {{^step_ready}}
                                    <p>产品数量：<span class="count">{{ try_count }}</span>  申请人数：<span class="count">{{ apply_count }}</span>
                                  {{/step_ready}}
                                  {{#has_price}}
                                    产品价格：<span class="count">{{ price }}</span>
                                  {{/has_price}}
                                  </p>
                                </div>
                                <div class="cats">
                                  {{#step_ready}}
                                    预热中 敬请期待!
                                  {{/step_ready}}
                                  {{#step_ing}}
                                  <i class="calendar icon"></i> 试用名单公布：<span> {{ publish_time }}</span>
                                  {{/step_ing}}
                                  {{#step_verify}}
                                    试用报告正在回收中...
                                  {{/step_verify}}

                                  {{#step_recover}}
                                    {{#has_report}}
                                      <i class="tasks icon"></i> 试用评测报告：已有<span> {{ report_count }}</span> 份
                                    {{/has_report}}
                                    {{^has_report}}
                                      试用报告正在回收中...
                                    {{/has_report}}
                                  {{/step_recover}}

                                  {{#step_over}}
                                    <i class="tasks icon"></i> 试用评测报告：已有<span> {{ report_count }}</span> 份
                                  {{/step_over}}

                                </div>
                            </div>

    					</div>
{{/results.rows}}
