{{#results.rows}}
<div class="recom-cell" id="product-{{ _id }}">
	<a title="{{ title }}" alt="{{ title }}" href="{{ wap_view_url }}">
		<img class="lazy" data-original="{{ cover.thumbnails.apc.view_url }}" src="http://frstatic.qiniudn.com/images/icon/load380-380nm.png">
		<div class="shopbiao">
			{{ #new_tips }}
			<!-- 新品 -->
			<img src="http://frstatic.qiniudn.com/images/icon/xinpinn.png" width="100%">
			{{ /new_tips }}
			{{ #hot_tips }}
			<!-- 特价  -->
			<img src="http://frstatic.qiniudn.com/images/icon/tejia.png" width="100%">
			{{ /hot_tips }}
			<!-- 折扣 -->
			<!--<img src="http://frstatic.qiniudn.com/images/icon/zhekou.png" width="100%">-->
		</div>
		<div class="desc">
			<h2>{{ &short_title }}</h2>
			<div class="cats">
	            <span class="unit">￥</span>{{ sale_price }}
	        </div>
			<!--<span class="counter">
	            <i class="heart icon"></i>  {{ love_count }}
	        </span>-->
		</div>
	</a>
</div>
{{/results.rows}}
