
  <div class="ui grid m-0">
    <div class="row">
      <div class="column">
        <h4 class="ui header dividing pb-r mt-r">使用新地址</h4>
      </div>
    </div>
    
    <div class="row pt-0">
      <div class="column">
        <form action="{{ app_wap_url }}/app/site/address/ajax_save_address" class="ui form" method="post" id="addbook-form">
          <input type="hidden" name="id" value="{{ _id }}" />
          <div class="field mb-2r">
            <h5 class="ui header mtb-r">收货人姓名</h5>
              <input type="text" name="name" value="{{ name }}" />
          </div>
          <div class="field mb-2r">
            <h5 class="ui header mtb-r">联系电话</h5>
              <input type="text" name="phone" value="{{ phone }}" />
          </div>
          <div class="field mb-2r">
            <h5 class="ui header mtb-r">邮政编码</h5>
              <input type="text" name="zip" value="{{ zip }}" />
          </div>
          
          <div class="field mb-2r">
            <h5 class="ui header mtb-r">地址</h5>
            
              <select name="province" value="{{ province }}" id="province-menu" class="choose province">
              {{ #provinces }}      
                <option value="{{ _id }}" {{#active}}selected="selected"{{/active}}>{{ city }}</option>
              {{ /provinces }}
              </select>
    
              <select name="district" id="district-menu" value="{{ city }}" class="choose city">
                  <option value=""></option>
             </select>
            
          </div>
          
          <div class="field mb-3r">
            <textarea name="address" class="small">{{ &address }}</textarea>
          </div>
          
              <div class="inline field">
            <div class="ui toggle checkbox {{#is_default_label}}checked{{/is_default_label}}">
              <input name="is_default" type="checkbox" {{#is_default_label}}checked="checked"{{/is_default_label}} value="1">
              <label>设为默认地址</label>
              </div>
          </div>
    
          <div class="nextbtn">
            <div class="close-btn">
              取消
            </div>	
            <div class="submit">
              提交
            </div>
          </div>
    
        </form>
    
      </div>
    </div>
    
  </div>

