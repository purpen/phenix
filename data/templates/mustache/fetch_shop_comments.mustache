{{#result.rows}}
        <div class="comment" id="{{ _id }}">
            <a class="avatar" href="{{ user.home_url }}">
                <img src="{{ user.small_avatar_url }}" alt="{{ user.nickname }}" />
            </a>
            <div class="content">
                <a class="author ui magenta link" href="{{ user.home_url }}">{{ user.nickname }}</a>
                <div class="metadata">
                    <span class="date">{{ created_on }}</span>

                        <span class="ui rating">
                          {{#star0}}
                          <i class="icon "></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          {{/star0}}
                          {{#star1}}
                          <i class="icon active"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          {{/star1}}
                          {{#star2}}
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          {{/star2}}
                          {{#star3}}
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon star"></i>
                          <i class="icon"></i>
                          <i class="icon"></i>
                          {{/star3}}
                          {{#star4}}
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon"></i>
                          {{/star4}}
                          {{#star5}}
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          <i class="icon active"></i>
                          {{/star5}}
                        </span>
                </div>
                
                {{^is_deleted}}
                <div class="laud">
                    {{#is_loved}}
                    <a class="ui link icon pop ajax" href="/comment/ajax_cancel_laud?id={{ _id }}" id="laud_{{ _id}}" data-content="取消" data-variation="inverted" >
                        <span class="love-count">{{#is_love_count}}{{ love_count }}{{/is_love_count}}</span>
                        <i class="icon heart"></i>
                    </a>
                    {{/is_loved}}
                    {{^is_loved}}
                    <a class="ui link icon pop ajax" href="/comment/ajax_laud?id={{ _id }}" id="laud_{{ _id}}" data-content="有用" data-variation="inverted" >
                        <span class="love-count">{{#is_love_count}}{{ love_count }}{{/is_love_count}}</span>
                        <i class="icon empty heart"></i>
                    </a>          
                    {{/is_loved}}
                </div>
                {{/is_deleted}}
      
                <div class="text">
                    {{ content }}
                </div>
                
                {{#is_login}}
                <div class="actions">
                    {{^deleted}}
                        {{#can_admin}}
                        <a class="delete confirm-request" href="/comment/delete?id={{ _id }}">屏蔽</a>
                        {{/can_admin}}
                    {{/deleted}}
                </div>
                {{/is_login}}
            </div>
        </div>
{{/result.rows}}


