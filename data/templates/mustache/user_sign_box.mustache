<div class="reg-border">
    {{#has_sign}}
    <a href="javascript:void(0);" class="ui big inverted magenta active button">
        已签到
    </a>
    {{/has_sign}}
    
    {{^has_sign}}
    <a href="javascript:void(0);" id="sign-in-btn" class="ui big inverted magenta active button">
        签到有奖
    </a>
    {{/has_sign}}

    {{#is_doing}}
        {{#is_true}}
        <div class="add">
            经验 +2 {{#give_money}}鸟币 +1{{/give_money}}
        </div>
        {{/is_true}}
    {{/is_doing}}
    <div class="adreg">	
      连签 <b>{{ continuity_times }}</b> 天 
    </div>
</div>

{{#has_sign}}
    <div class="ui mini avatar images Ranking">
        {{#data.sign}}
        <div class="image">
            <div class="besticon" style="background-image: url(https://s3.taihuoniao.com/images/besticon{{ sign_index }}.png);">{{ sign_index }}</div>
            <a href="{{ home_url }}" target="_blank" title="{{ nickname }}" data-variation="wide" data-html="<div class='header'>{{ nickname }}</div>">
                <img src="{{ medium_avatar_url }}" alt="{{ nickname }}" class="avatar" />
            </a>
        </div>
        {{/data.sign}}
    </div>
{{/has_sign}}

