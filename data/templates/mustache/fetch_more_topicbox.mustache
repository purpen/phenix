    <div class="content">
        <h2 class="title {{#red}} topic-title-color-red{{/red}}{{#blue}} topic-title-color-blue{{/blue}}{{#green}} topic-title-color-green{{/green}}{{#yellow}} topic-title-color-yellow{{/yellow}}">
            <a href="{{ view_url }}" title="{{ title }}" class="ui line" target="_blank">
