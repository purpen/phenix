<div class="ui responsive grid">    <div class="row">        <div class="column">            <h3 class="ui header">            	你可能喜欢的产品            </h3>            <div class="ui four products cards">            	{{#results.rows}}                    <div class="card" id="product-{{ product._id }}">                        <div class="problock">                            <a title="{{ product.title }}" alt="{{ product.title }}-太火鸟智能硬件商店" href="{{ product.view_url }}" class="thumb" target="_blank">                            <img class="lazy" data-original="{{ product.cover.thumbnails.apc.view_url }}" src="https://s3.taihuoniao.com/images/icon/loadbg0.jpg">                            </a>                            {{#product.video}}                            <span class="videomark">                                <i class="icon video play"></i>                            </span>                            {{/product.video}}                            <h2>                                <a href="{{ product.view_url }}" title="{{ product.title }}" class="ui line" target="_blank">                    			    {{ product.title }}                    		    </a>                            </h2>                            <div class="excerpt">                                <p>{{ product.advantage }}</p>                            </div>                            <div class="cats">                                {{^product.idea}}                                    {{#product.hotsale}}                                    <i class="yen icon"></i>{{ product.sale_price }}                                    {{/product.hotsale}}                                    {{#product.presale}}                                    <i class="yen icon"></i>{{ product.presale_money }}                                    {{/product.presale}}                                {{/product.idea}}                            </div>                            <span class="counter" style="right:60px;">                                <i class="unhide icon"></i>{{ product.view_count }}                            </span>                            <span class="counter">                                <i class="heart icon"></i> {{ product.love_count }}                            </span>                        </div>                    </div>                {{/results.rows}}            </div>        </div>    </div></div>