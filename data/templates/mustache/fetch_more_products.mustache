{{#results.rows}}
<div class="card" id="product-{{ _id }}">
    <div class="problock">
        <a title="{{ title }}" alt="{{#product_alt_tag}}{{ tags.0 }}-太火鸟智能硬件商店{{/product_alt_tag}}{{^product_alt_tag}}{{ title }}-太火鸟智能硬件商店{{/product_alt_tag}}" href="{{ view_url }}" style="background-image: url({{ cover.thumbnails.hm.view_url }});" class="thumb" target="_blank">
            {{#video}}
            <span class="videomark">
                <i class="icon video play"></i>
            </span>
            {{/video}}
        </a>
        <div class="ribbons">
            {{#newest}}
            <a class="ribbon newest" href="{{ app_url_shop }}/list-c0-t0-s0-p1" target="_blank">NEW</a>
            {{/newest}}
            {{#hot}}
            <a class="ribbon hot" href="{{ app_url_shop }}/list-c0-t0-s2-p1" target="_blank">HOT</a>
            {{/hot}}
            {{#featured}}
            <a class="ribbon featured" href="{{ app_url_shop }}/list-c0-t5-s0-p1" target="_blank">编辑精选</a>
            {{/featured}}
            {{#stick}}
            <a class="ribbon stick" href="{{ app_url_shop }}/list-c0-t4-s0-p1" target="_blank">店长推荐</a>
            {{/stick}}
            {{#snatched}}
            <a class="ribbon snatched" href="{{ app_url_shop }}/list-c0-t6-s0-p1" target="_blank">限时抢购</a>
            {{/snatched}}
            {{#presale}}
            <a class="ribbon presale" href="{{ app_url_shop }}/list-c0-t7-s0-p1" target="_blank">正在预售</a>
            {{/presale}}
            {{#exchange}}
            <a class="ribbon exchange" href="{{ app_url_shop }}/list-c0-t3-s0-p1" target="_blank">积分兑换</a>
            {{/exchange}}
        </div>
        <h2>
            <a href="{{ view_url }}" title="{{ title }}" class="ui line" target="_blank">
			    {{ title }}
		    </a>
        </h2>
        <div class="excerpt">
            <p>{{ advantage }}</p>
        </div>
        <div class="cats">
        {{^idea}}
            {{#hotsale}}
            <i class="yen icon"></i>{{ sale_price }}
            {{/hotsale}}
            {{#presale}}
            <i class="yen icon"></i>{{ presale_money }}
            {{/presale}}
        {{/idea}}
        </div>
        <span class="counter">
            <i class="heart icon"></i> {{ love_count }}
        </span>
    </div>
</div>
{{/results.rows}}