
    <div class="block delivery_address_list{{#is_default}} active{{/is_default}}" id="item-{{ _id }}" data-id="{{ _id }}">
        <div class="content">
            <h4 class="ui dividing header">
                <i class="map marker icon"></i> <span class="name">{{ name }}</span>
            </h4>
            <p>{{ phone }}</p>
            <p>{{ province }} {{ city }} {{ county }} {{ town }}<br /> {{ address }} </p>
            <p>{{ zip }}</p>
        
            <div class="actions">
                <a class="ui small gray icon edit button" data-id="{{ _id }}">
                    <i class="edit icon"></i>
                </a>
                <a class="ui small gray icon remove button" data-id="{{ _id }}">
                    <i class="remove icon"></i>
                </a>
            </div>
        </div>
    </div>

